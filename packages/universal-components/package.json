{
  "name": "srs-universal-components",
  "private": true,
  "version": "1.0.0",
  "description": "Universally reuseable components boilerplate",
  "author": "Christoph Benjamin Weber",
  "license": "MIT",
  "main": "dist/index.js",
  "browser": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "babel src -d tmp -s true && rimraf ./dist && ncp ./tmp ./dist && rimraf ./tmp",
    "prepublish": "yarn build",
    "lint": "eslint src"
  },
  "dependencies": {
    "react": "^16.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "8",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.4.0",
    "ncp": "^2.0.0",
    "node-mv": "^0.1.3",
    "prettier": "^1.13.5",
    "rimraf": "^2.6.2"
  },
  "babel": {
    "parser": "babel-eslint",
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              ">0.25%",
              "not ie 10",
              "not op_mini all"
            ]
          }
        }
      ],
      [
        "react"
      ]
    ],
    "plugins": [
      "transform-class-properties"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "import/no-extraneous-dependencies": false,
      "react/prop-types": "warning",
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used",
          "argsIgnorePattern": "^_",
          "ignoreRestSiblings": true
        }
      ],
      "react/prefer-stateless-function": false
    },
    "extends": [
      "airbnb",
      "prettier",
      "prettier/react"
    ]
  }
}
